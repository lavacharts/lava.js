{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "Schema for a Chart to be used with Lava.js",
    "title": "Chart",
    "type": "object",
    "required": [
        "type",
        "label",
        "elementId",
        "datatable"
    ],
    "properties": {
        "type": {
            "type": "string"
        },
        "elementId":  {
            "type": "string"
        },
        "label": {
            "type": "string"
        },
        "data": {
            "type": "object"
        },
        "options": {
            "type": "object"
        },
        "png": {
            "type": "boolean"
        },
        "events": {
            "type": "array"
        },
        "formats": {
            "type": "array"
        }
    }
}

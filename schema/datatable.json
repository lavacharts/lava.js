{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "Schema for a DataTable to be used with the Google Chart API",
    "title": "DataTable",
    "type": "object",
    "required": ["rows", "cols"],
    "properties": {
        "cols": {
            "type": "array",
            "items" : {
                "$ref" : "#/definitions/Column"
            }
        },
        "rows": {
            "type": "array",
            "items": {
                "$ref" : "#/definitions/Row"
            }
        }
    },
    "additionalProperties": false,
    "definitions": {
        "Column": {
            "title": "Column",
            "type": "object",
            "required": ["type"],
            "properties": {
                "id": {
                    "type": "string"
                },
                "label": {
                    "type": "string"
                },
                "type": {
                    "type": "string"
                }
            },
            "additionalProperties": false
        },
        "Row": {
            "title": "Row",
            "type": "object",
            "required": ["c"],
            "properties": {
                "c": {
                    "type": "array",
                    "items": {
                        "$ref" : "#/definitions/Cell"
                    }
                }
            },
            "additionalProperties": false
        },
        "Cell": {
            "title": "Cell",
            "type": "object",
            "required": ["v"],
            "properties": {
                "v": {
                    "anyOf": [
                        { "type": "string" },
                        { "type": "number" },
                        { "type": "null" }
                    ]
                },
                "f": {
                    "type": "string"
                },
                "p": {
                    "type": "array",
                    "items": {
                        "type": "object"
                    }
                }
            },
            "additionalProperties": false
        }
    }
}

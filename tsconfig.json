{
  "compilerOptions": {
    "strict": true,
    "target": "es5",
    "sourceMap": true,
    "outDir": "./build",
    "allowJs": false,
    "declaration": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "esModuleInterop": true,
    "lib": ["dom","es2015"],
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "experimentalDecorators": true
    // "typeRoots": [ "./typings", "./node_modules/@types"]
  },
  "include": [
    "src/**/*",
    "typings/lavajs/index.d.ts",
    "typings/lavajs/global.d.ts"
  ],
  "exclude": [
    "typings",
    "src/angular",
    "node_modules"
  ]
}

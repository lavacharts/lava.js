{
  "compilerOptions": {
    "strict": true,
    "target": "es5",
    "sourceMap": true,
    // "outFile": "dist/lava.js",
    "outDir": "./build",
    "allowJs": false,
    "declaration": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "esModuleInterop": true,
    "lib": ["dom","es2015"],
    "moduleResolution": "node",
    "experimentalDecorators": true
  },
  "paths": {
    "*": ["node_modules/*", "src/types/*"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/angular",
    "node_modules"
  ]
}

{
  "compilerOptions": {
    "strict": true,
    "target": "es6",
    "sourceMap": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "lib": ["dom","es2018"],
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "index.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/examples"
  ]
}

{
  "source": "./src",
  "destination": "./docs",
  "plugins": [
    {
      "name": "esdoc-standard-plugin",
      "option": {
        "accessor": {"access": ["public", "protected"], "autoPrivate": true},
        "brand": {
          "title": "LavaJs",
          "description": "Wrapper library for the Google Chart API",
          "repository": "https://github.com/lavacharts/lava.js.git",
          "author": "https://github.com/kevinkhill"
        },
        "test": {
          "source": "./test/",
          "interfaces": ["describe", "it", "context", "suite", "test"],
          "includes": ["(spec|Spec|test|Test)\\.js$"],
          "excludes": ["\\.config\\.js$"]
        }
      }
    }
  ]
}

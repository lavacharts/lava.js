<!doctype html>
<html>
<head>
    <title>Lava.js | Dynamic Options</title>
    <meta charset="UTF-8">
</head>

<body>
    <div class="flex-center position-ref">
        <div class="content">
            <div class="title">
                LavaJs v4.0
            </div>
            <p>Google Charts, made simple.</p>
            <p><a href="#" onclick="loadOptions()">(Click to update options.)</a></p>
            <p><a href="index.html">Basic</a>, <a href="events.html">Events</a>, <a href="dataquery.html">Remote Data</a></p>

            <div>
                <div class="align-left float">
                    <pre><code>
function getRandomColor() {
    const letters = '0123456789ABCDEF';
    const color = '#';
    for (const i = 0; i < 6; i++) {
        color += letters[Math.floor(Math.random() * 16)];
    }
    return color;
}

function loadOptions() {
    lava.loadOptions('MyFancyChart', {
        colors: [getRandomColor()]
    });
}

const chartJson = {
    label: 'MyFancyChart',
    type: 'ScatterChart',
    elementId: 'chart_div',
    data: [
        ['Age', 'Cash'],
        [12,  101],
        [15,  240],
        [18,  280],
        [32,  324]
    ],
    options: {
        colors: ['green'],
        chartArea: {width: '50%'}
    }
};

lava.store(chartJson);
lava.run();
                </code></pre>
                </div>
                <div class="float" style="width: 400px;">
                    <pre><code>
&#x3C;div id=&#x22;chart_div&#x22;&#x3E;&#x3C;/div&#x3E;
                    </code></pre>
                    <div id="chart_div"></div>
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript">
        function getRandomColor() {
            const letters = '0123456789ABCDEF';
            const color = '#';
            for (const i = 0; i < 6; i++) {
                color += letters[Math.floor(Math.random() * 16)];
            }
            return color;
        }

        function loadOptions() {
            lava.loadOptions('MyFancyChart', {
                colors: [getRandomColor()]
            });
        }

        const chartJson = {
            label: 'MyFancyChart',
            type: 'ScatterChart',
            elementId: 'chart_div',
            data: [
                ['Age', 'Cash'],
                [12,  101],
                [15,  240],
                [18,  280],
                [32,  324]
            ],
            options: {
                colors: ['green']
            }
        };

        lava.store(chartJson);
        lava.run();
    </script>
</body>
</html>
